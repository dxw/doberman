<% if @update.errors.any? %>
  <h2>
    <%= pluralize(@update.errors.count, "error") %>
    prohibited this update from being saved:
  </h2>

  <ul>
    <% @update.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: [ @repair, @update ], local: true do |form| %>
  <p>
    <%= form.label :status %><br>
    <%= form.select :status, options_for_select(RepairUpdate.statuses.map { |t| [t[0].humanize, t[0]] }, @repair.status) %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
