<%= form_with scope: :repair, url: repairs_path do |form| %>
  <p>
    <%= form.label :property_id %><br>
    <%= form.collection_select :property_id, Property.all, :id, :address %>
  </p>

  <p>
    <%= form.label :issue_type %><br>
    <%= form.select :issue_type, options_for_select(Repair.issue_types.map { |t| [t[0].humanize, t[0]] }) %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
